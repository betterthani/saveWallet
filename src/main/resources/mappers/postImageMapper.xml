<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.diary.post.dao.PostImageDAO">
	<!-- 사진 insert -->
	<insert id="addPostImageByUserIdUserLoginIdFIle" parameterType="map">
		INSERT INTO `post_image`
		(
			`postId`
			,`userId`
			,`postImgPath`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{postId}
			,#{userId}
			,#{postImgPath}
			,NOW()
			,NOW()
		)
	</insert>
	
	<!-- 사진 list select -->
	<select id="selectPostImageList" parameterType="int" resultType="com.diary.post.model.PostImage">
		SELECT
			`id`
			,`postId`
			,`userId`
			,`postImgPath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post_image`
		WHERE
			`postId` = #{postId}
	</select>
	
	<!-- 해당 사진 있는지 조회 -->
	<select id="selectPostImageListByUserIdPostId" parameterType="map" resultType="com.diary.post.model.PostImage">
		SELECT
			`id`
			,`postId`
			,`userId`
			,`postImgPath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post_image`
		WHERE
			`postId` = #{postId}
			AND `userId` = #{userId}
	</select>
	
	<!-- 해당 사진 삭제 -->
	<delete id="deletePostImageByUserIdPostId" parameterType="map">
		DELETE FROM `post_image`
		WHERE
			`postId` = #{postId}
			AND `userId` = #{userId}
	</delete>
</mapper>