<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.diary.user.dao.UserDAO">
	<!-- 로그인 -->
	<select id="selectUserByLoginIdPassword" resultType="com.diary.user.model.User" parameterType="map">
		SELECT
			`id`
			,`loginId`
			,`nickName`
			,`password`
			,`email`
			,`age`
			,`gender`
			,`statusMessage`
			,`profileImgPath`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`loginId`=#{loginId}
 		AND
 			`password`=#{password}
	</select>
	
	<!-- 회원가입 -->
	<insert id="selectUserCount" parameterType="com.diary.user.model.User">
		INSERT INTO `user`
		(
			`loginId`
			,`nickName`
			,`password`
			,`email`
			,`age`
			,`gender`
			,`statusMessage`
			,`profileImgPath`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{loginId}
			,#{nickName}
			,#{password}
			,#{email}
			,#{age}
			,#{gender}
			,#{statusMessage}
			,#{profileImgPath}
			,NOW()
			,NOW()
		)
	</insert>
	
	<!-- 아이디 중복확인 -->
	<select id="existLoginId" parameterType="String" resultType="boolean">
		SELECT
			COUNT(*)
		FROM
			`user`
		WHERE
			`loginId`= #{loginId}
	</select>
	
	<!-- 비밀번호 찾기 -->
	<select id="existFindPasswordByLoginIdEmail" parameterType="map" resultType="boolean">
		SELECT
			COUNT(*)
		FROM
			`user`
		WHERE
			`loginId`= #{loginId}
		AND `email` = #{email}
	</select>
	
	<!-- 유저 아이디로 조회 -->
	<select id="selectUserByUserId" resultType="com.diary.user.model.User" parameterType="int">
		SELECT
			`id`
			,`loginId`
			,`nickName`
			,`password`
			,`email`
			,`age`
			,`gender`
			,`statusMessage`
			,`profileImgPath`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`id` = #{userId}
	</select>
	
	
</mapper>