<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.diary.post.dao.PostDAO">
 	<!-- 글 insert -->
 	<insert id="insertPost" parameterType="com.diary.post.model.Post" useGeneratedKeys="true" keyProperty="id">
 		INSERT INTO `post`
 		(
			`userId`
			,`title`
			,`subject`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			,#{title}
 			,#{subject}
 			,NOW()
 			,NOW()
 		)
 	</insert>
 	
 	<!-- 글 목록 가져오기 select -->
 	<select id="selectpostList" resultType="com.diary.post.model.Post">
 		SELECT
 			`id`
			,`userId`
			,`title`
			,`subject`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		ORDER BY `id` DESC
 	
 	</select>
 	
 	<!-- 해당 글 삭제 -->
 	<delete id="deletePostByUserIdPostId" parameterType="map">
 		DELETE FROM `post`
 		WHERE
 			`userId` = #{userId}
 			AND `id` = #{postId}
 	</delete>
 	
 	<!-- 해당 글 있는지 조회 -->
 	<select id="selectPostByUserIdPostId" resultType="int" parameterType="map">
 		SELECT
 			`id`
			,`userId`
			,`title`
			,`subject`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
 			`userId` = #{userId}
 			AND `id` = #{postId}
 	</select>
 
 </mapper>